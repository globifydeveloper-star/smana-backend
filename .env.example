PORT=5000
MONGO_URI=mongodb://localhost:27017/smana_hotel
JWT_SECRET=your_jwt_secret_key_change_me
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis (for Socket.io adapter)
REDIS_HOST=localhost
REDIS_PORT=6379

# HyperPay Payment Gateway - PRODUCTION
# Test: https://eu-test.oppwa.com | Production: https://eu-prod.oppwa.com
HYPERPAY_BASE_URL=https://eu-prod.oppwa.com
HYPERPAY_ACCESS_TOKEN=your_production_access_token
HYPERPAY_ENTITY_ID_AED=your_production_entity_id
# HYPERPAY_ENTITY_ID_USD not supported in production (AED only)
HYPERPAY_MODE=production
# Webhook secret for validating HyperPay callback signatures (HMAC-SHA256)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
HYPERPAY_WEBHOOK_SECRET=your_webhook_secret_change_me
